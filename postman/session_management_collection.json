                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/sessions/admin/logout-user",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "sessions",
                                "admin",
                                "logout-user"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": \"{{target_user_id}}\"\n}"
                        }
                    }
                }
            ]
        }
    ]
