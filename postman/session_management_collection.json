                    }
                },
                {
                    "name": "8. Non-Admin Force Logout — 403",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status 403', () => pm.response.to.have.status(403));",
                                    "pm.test('Access denied', () => {",
                                    "  const body = pm.response.json();",
                                    "  pm.expect(body.success).to.be.false;",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
