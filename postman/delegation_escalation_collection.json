            "item": [
                {
                    "name": "1. Create Delegation",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "pm.test('Delegation created', () => {",
                                    "  const body = pm.response.json();",
                                    "  pm.expect(body.success).to.be.true;",
                                    "  pm.expect(body.data.id).to.be.a('string');",
                                    "  pm.collectionVariables.set('delegation_id', body.data.id);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/delegations",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "delegations"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"fromUser\": \"{{from_user_id}}\",\n  \"toUser\": \"{{to_user_id}}\",\n  \"startDate\": \"2026-02-19T00:00:00Z\",\n  \"endDate\": \"2026-03-01T00:00:00Z\"\n}"
                        }
