{
  "version": 2,
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "methods": ["OPTIONS"],
      "dest": "src/app.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://constructor-erp-client.vercel.app",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, x-company-id, x-idempotency-key, Idempotency-Key, x-request-id",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Max-Age": "86400"
      },
      "status": 204
    },
    {
      "src": "/api/(.*)",
      "dest": "src/app.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://constructor-erp-client.vercel.app",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, x-company-id, x-idempotency-key, Idempotency-Key, x-request-id",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS, PATCH",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    {
      "src": "/(.*)",
      "dest": "src/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
